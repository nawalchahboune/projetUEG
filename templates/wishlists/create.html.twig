{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle liste de souhaits{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg border-light rounded-3">
                <div class="card-header text-white text-center" style="background-color: #00B8DE;">
                    <h1 class="h3 mb-0">Créer une nouvelle liste de souhaits</h1>
                </div>
                <div class="card-body p-5">
                    {{ form_start(form) }}

                    <!-- Nom de la liste -->
                    <div class="mb-4">
                        {{ form_label(form.name, 'Nom de la liste', {'label_attr': {'class': 'fw-bold text-dark'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control p-3', 'placeholder': 'Ex: Anniversaire, Noël, Mariage...', 'style': 'border-radius: 8px; border: 2px solid #D1D1D1; transition: border 0.3s ease-in-out;'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <!-- Date limite -->
                    <div class="mb-4">
                        {{ form_label(form.deadline, 'Date limite (optionnelle)', {'label_attr': {'class': 'fw-bold text-dark'}}) }}
                        {{ form_widget(form.deadline, {'attr': {'class': 'form-control p-3', 'style': 'border-radius: 8px; border: 2px solid #D1D1D1; transition: border 0.3s ease-in-out;'}}) }}
                        {{ form_errors(form.deadline) }}
                        <small class="form-text text-muted">Jusqu'à quand cette liste sera-t-elle active ?</small>
                    </div>

                    <!-- Collaborateurs -->
                    {% if form.collaborators is defined %}
                    <div class="mb-4">
                        {{ form_label(form.collaborators, 'Partagez avec (optionnel)', {'label_attr': {'class': 'fw-bold text-dark'}}) }}
                        {{ form_widget(form.collaborators, {'attr': {'class': 'form-select p-3', 'multiple': 'multiple', 'style': 'border-radius: 8px; border: 2px solid #D1D1D1; transition: border 0.3s ease-in-out;'}}) }}
                        {{ form_errors(form.collaborators) }}
                        <small class="form-text text-muted">Sélectionnez les utilisateurs avec qui vous souhaitez partager cette liste</small>
                    </div>
                    {% endif %}

                    <!-- Boutons -->
                    <div class="d-grid gap-3 d-md-flex justify-content-md-between mt-4">
                        <a href="{{ path('app_wishlists_index') }}" class="btn btn-outline-dark px-4 py-2 shadow-sm mb-3">
                            <i class="fas fa-times-circle me-2"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm mt-3">
                            <i class="fas fa-save me-2"></i> Créer la liste
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% if form.collaborators is defined %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Vous pouvez ajouter ici du code JavaScript pour améliorer le sélecteur multiple
        // Par exemple, intégrer Select2 ou un autre plugin pour un meilleur UX
    });
</script>
{% endif %}
{% endblock %}