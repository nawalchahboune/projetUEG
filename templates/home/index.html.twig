<!-- Section: How GiftWish Works -->
<section class="giftwish-works container">
    <h2 class="text-center">How GiftWish works</h2>
    <div class="d-flex justify-content-between align-items-start text-center flex-wrap">
        <div class="feature-box">
            <img src="{{ asset('images/expensive-gifts.jpg') }}" alt="Top expensive gifts" class="feature-img">
            <h3>Top expensive gifts</h3>
            <p>Enter a wishlist. Find the most wanted gifts or add new ones.</p>
        </div>
        <div class="feature-box">
            <img src="{{ asset('images/wishlist.jpg') }}" alt="Top wishlists" class="feature-img">
            <h3>Top wishlists by</h3>
            <p>View top items and wishlists. Explore profiles and receive updates.</p>
        </div>
        <div class="feature-box">
            <img src="{{ asset('images/purchased-items.jpg') }}" alt="Top purchased items" class="feature-img">
            <h3>Top purchased items</h3>
            <p>Complete your purchase. Sit back and wait for the joy of giving!</p>
        </div>
    </div>
</section>

<hr>

<section class="giftwish-community container">
    <h2 class="community-title">Join GiftWish community</h2>

    <div class="community-list">
        <!-- Gift Giver -->
        <div class="community-item">
            <div class="community-img">
                <img src="{{ asset('images/gift-giver.jpg') }}" alt="Gift giver">
            </div>
            <div class="community-text">
                <h3>As a gift giver</h3>
                <p>Surprise loved ones with wishlist items. Make dreams come true.</p>
                <a href="{{ path('app_about') }}" class="btn btn-success">Gift now</a>
            </div>
        </div>

        <!-- Contributor -->
        <div class="community-item">
            <div class="community-img">
                <img src="{{ asset('images/contributor.jpg') }}" alt="Contributor">
            </div>
            <div class="community-text">
                <h3>As a contributor</h3>
                <p>Help fulfill wishes with gift contributions and support the community.</p>
                <a href="{{ path('app_about') }}" class="btn btn-success">Contribute now</a>
            </div>
        </div>

        <!-- Team Member -->
        <div class="community-item">
            <div class="community-img">
                <img src="{{ asset('images/team-member.jpg') }}" alt="Team member">
            </div>
            <div class="community-text">
                <h3>As a team member</h3>
                <p>Join a team that's dedicated to making wishes a reality.</p>
                <a href="{{ path('app_about') }}" class="btn btn-success">Join us</a>
            </div>
        </div>
    </div>
</section>

<hr>

<section class="get-giftwish-app">
    <div class="text-content">
        <h2>Get the GiftWhish App</h2>
        <h3>Shop effortlessly!</h3>
        <p>Surprise your loved ones with gifts from their wishlist. Explore a wide range of options from top brands.</p>
        <button class="btn-green">Get app</button>
    </div>
    <img src="{{ asset('images/gift-image.png') }}" alt="Gift box">
</section>


    
