{# templates/login.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GiftWish - Log In</title>

  {# Import Pacifico (for the logo) and Work Sans (for the rest) #}
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Pacifico&family=Work+Sans:wght@300;400;500;600;700&display=swap"
  >
  {# Use the same CSS file as signup to maintain layout consistency #}
  <link rel="stylesheet" href="{{ asset('css/signup.css') }}">
</head>
<body>

  {# Top-right link: "Not a member? Sign up" #}
  <a href="{{ path('app_signup') }}" class="member-link">
    Not a member ?
    <span>Sign up</span>
  </a>

  <div class="signup-container">
    {# LEFT PANEL: Background image with overlay, logo and tagline #}
    <div class="left-panel" style="background-image: url('{{ asset("assets/image (10).png") }}');">
      <div class="overlay"></div>
      <div class="left-content">
        <div class="logo">GiftWish</div>
        <div class="tagline">Offrez du bonheur,<br>un cadeau Ã  la fois !</div>
      </div>
    </div>

    {# RIGHT PANEL: Login form #}
    <div class="right-panel">
      <h1>Log in</h1>

      {# Display error if exists #}
      {% if error %}
          <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      {# Login form replacing manual inputs with the provided markup #}
      <form method="post" class="signup-form">
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
          
          <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
          
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          
          <button type="submit" class="signup-btn">Log in</button>
      </form>


    </div>
  </div>

  <footer class="footer">
    M.T-ATLANTIQUE@2025
  </footer>

</body>
</html>
